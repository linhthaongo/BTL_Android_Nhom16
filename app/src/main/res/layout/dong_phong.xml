<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:weightSum="20"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="7dp"
    android:background="@drawable/bgrcard"
    android:id="@+id/linear_Phong">

        <ImageView
            android:id="@+id/img_PhongDong"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="3"
            android:layout_marginStart="3dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bgrcard"
            android:src="@drawable/home" />

        <LinearLayout
            android:background="@drawable/bgrcard"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img_PhongDong"
            android:layout_width="0dp"
            android:layout_weight="15.8"
            android:layout_height="52dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:padding="1dp">
                    <ImageView
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:background="@drawable/baseline_lock_24" />
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="3.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:paddingLeft="5dp"
                        android:text="Mã phòng: " />
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:id="@+id/txt_MaPhongDong"
                        android:layout_width="0dp"
                        android:layout_weight="6.2"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:padding="1dp">
                    <ImageView
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:background="@drawable/bottom_btn1" />
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="@string/tenPhongDong"
                        android:layout_weight="3.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:paddingLeft="5dp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:id="@+id/txt_TenPhongDong"
                        android:layout_width="0dp"
                        android:layout_weight="6.2"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                </LinearLayout>
                <TableRow>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="Mô tả: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:id="@+id/txt_MoTaPhongDong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_SuaPhongDong"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bgrcard"
                android:src="@drawable/pencil" />

            <ImageView
                android:id="@+id/img_XoaPhongDong"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bgrcard"
                android:src="@drawable/delete" />
        </LinearLayout>

</LinearLayout>