<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="20"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="6dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
  >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_NhanVienDong"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp" />

        <LinearLayout
            android:layout_weight="15.8"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_NhanVienDong"
            android:orientation="vertical">

            <TableLayout
                android:background="@drawable/bgrcard"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:padding="1dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:layout_weight="0.6"
                            android:background="@drawable/baseline_lock_24" />
                        <TextView
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:paddingLeft="5dp"
                            android:text="@string/txt_MaNhanVienDong"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_MaNVDong"
                            android:layout_width="0dp"
                            android:layout_weight="6.4"
                            android:layout_height="wrap_content"
                            android:text="Mã nhân viên"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:padding="1dp">

                    <ImageView
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:background="@drawable/baseline_account_circle_24" />
                    <TextView
                        android:layout_gravity="fill"
                        android:paddingLeft="5dp"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_HoTenNVDong"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txt_TenNVDong"
                        android:layout_width="0dp"
                        android:layout_weight="6.4"
                        android:layout_height="wrap_content"
                        android:text="Tên nhân viên"
                        android:textSize="16dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:padding="1dp">
                    <ImageView
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:background="@drawable/baseline_calendar_month_24" />
                    <TextView
                        android:layout_gravity="fill"
                        android:paddingLeft="5dp"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh : "
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txt_NgaySinhDong"
                        android:layout_width="0dp"
                        android:layout_weight="6.4"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:padding="1dp">
                    <ImageView
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:background="@drawable/baseline_account_circle_24" />
                    <TextView
                        android:paddingLeft="5dp"
                        android:layout_gravity="fill"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_GioiTinhNVDong"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txt_GioiTinhNVDong"
                        android:layout_width="0dp"
                        android:layout_weight="6.4"
                        android:layout_height="wrap_content"
                        android:text="Giới tính"
                        android:textSize="16dp" />

                </LinearLayout>

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_SDTNVDong"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txt_SdtNVDong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại"
                        android:textSize="16dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_DiaChiNVDong"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txt_DiaChiNVDong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ"
                        android:textSize="16dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txt_EmailNVDong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="16dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã phòng:"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txt_MaPhongNVDong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã phòng"
                        android:textSize="16dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã dự án:"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/txt_MaDANVDong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã dự án"
                        android:textSize="16dp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_SuaNVDong"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bgrcard"
                android:src="@drawable/pencil" />

            <ImageView
                android:id="@+id/img_XoaNVDong"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_below="@id/img_SuaNVDong"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/bgrcard"
                android:src="@drawable/delete" />
        </LinearLayout>
<!--    </RelativeLayout>-->
</LinearLayout>