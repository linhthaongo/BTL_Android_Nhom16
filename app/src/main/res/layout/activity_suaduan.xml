<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout_SuaDuAn"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SuaDuAn">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/background_load"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_TaiKhoanDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/suaDuAn"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"/>

    </FrameLayout>
    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView" />

    <LinearLayout
        android:id="@+id/linear_SuaDuAn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="-20dp">


        <EditText
            android:id="@+id/edit_SuaMaDuAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boderedit"
            android:ems="10"
            android:hint="@string/edit_MaDuAnThem"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:scrollHorizontally="true"
            android:focusable="false"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawablePadding="16dp"/>

        <EditText
            android:id="@+id/edit_SuaTenDuAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boderedit"
            android:ems="10"
            android:hint="@string/edit_TenDuAnThem"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:scrollHorizontally="true"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/baseline_library_books_24"
            android:drawablePadding="16dp"/>

        <EditText
            android:id="@+id/edit_SuaMotaDuAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boderedit"
            android:ems="10"
            android:hint="@string/mota"
            android:inputType="textMultiLine"
            android:lines="8"
            android:padding="12dp"
            android:scrollHorizontally="true"
            android:gravity="top|left"
            android:maxLines="15" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_LuuSuaDuAn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/boderthongke"
                android:text="@string/btn_ThemDuAn"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_HuySuaDuAn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/boderthongke"
                android:text="@string/btn_HuyDuAn"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/circle1"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-90dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/boderthongke" />

        <ImageView
            android:id="@+id/circle2"
            android:layout_width="182dp"
            android:layout_height="182dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/boderthongke"
            android:layout_marginLeft="280dp"/>

    </LinearLayout>

</LinearLayout>